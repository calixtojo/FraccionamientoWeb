<!DOCTYPE html>
<html>
<head>
    <script src="~/Scripts/Menu/Menu.js"></script>
    <link href="~/Content/Menu/Menu.css" rel="stylesheet" />
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title Fraccionamiento</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
           
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Fraccionamiento", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Usuarios", "Index", "Home")</li>
                    <li>@Html.ActionLink("Control de Pagos", "About", "Home")</li>
                    <li>@Html.ActionLink("Visitas", "Contact", "Home")</li>
                    <li>@Html.ActionLink("Reportes", "Contact", "Home")</li>
                    <li>@Html.ActionLink("Reservación", "Contact", "Home")</li>
                    <li>@Html.ActionLink("Mantenimiento", "Contact", "Home")</li>
                    <li>@Html.ActionLink("Login", "Index", "Login")</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year Fraccionamiento</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
